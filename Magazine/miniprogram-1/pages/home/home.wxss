.block1 {
  display: flex;
  background: rgb(63, 63, 63);
  padding: 20rpx;
  justify-content: space-between;
}

.block1 image {
  display: block;
  width: 90%;
  padding: 20rpx;
}

.top {
  height: 100rpx;
  line-height: 100rpx;
  position: relative;
}

.top .line {
  width: 32%;
  background: #ccc;
  height: 4rpx;
}

.same {
  position: absolute;
  left: 0;
  top: 0;
  right: 0;
  bottom: 0;
  margin: auto;
}

.top .title {
  width: 26%;
  background: rgb(63, 63, 63);
  text-align: center;
  color: #ccc;
}

.block4 {
  background: rgb(63, 63, 63);
  margin-bottom: 10rpx;
}

.block4 .down {
  border-top: 4rpx solid rgb(63, 63, 63);
  padding: 20rpx;
  display: flex;
  justify-content: space-between;
  flex-wrap: wrap;
}

.block4 .down view {
  width: 50%;
  overflow: hidden;
  margin-top: -10rpx;
}

.block4 .down view image {
  width: 100%;
  height: 500rpx;
  border-radius: 6rpx;
  display: block;
  margin: 20rpx;
}

.block4 .down view text {
  color: #ccc;
  margin-left: 20rpx;
}
