.block {
  background: #fff;
  margin-top: 20rpx;
}

.block .down {
  border-top: 4rpx solid #ccc;
  padding: 20rpx;
  display: flex;
  justify-content: space-between;
  flex-wrap: wrap;
}

.block .down view {
  width: 48%;
  margin-top: 20rpx;
  overflow: hidden;
  
}

.block .down view image {
  border: 2px solid #ccc;
  width: 100%;
  height: 200rpx;
  display: block;
  border-radius: 8rpx;
  box-shadow: 0 0 5rpx rgba(0, 0, 0, 0.5);
}
